rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // =========================================================================
    // RECIPES COLLECTION
    // =========================================================================
    // Recipes are readable by ANY authenticated user (shared collection)
    // Only the creator can modify their own recipes
    match /recipes/{recipeId} {
      // Any authenticated user can read all recipes
      allow read: if isAuthenticated();

      // Authenticated users can create recipes (will set userId on creation)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Only the creator can update or delete their recipe
      allow update, delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;
    }

     // =========================================================================
     // USERS COLLECTION (Backend and Client access)
     // =========================================================================
     match /users/{userId} {
       // Read: Only authenticated user can read their own profile
       allow read: if isOwner(userId);

       // Create: Validate immutable fields are set correctly
       allow create: if isOwner(userId)
         && request.resource.data.uid == userId
         && request.resource.data.createdAt is int
         && request.resource.data.createdAt > 0
         && request.resource.data.email is string;

       // Update: Prevent modifying immutable fields
       allow update: if isOwner(userId)
         && request.resource.data.uid == resource.data.uid
         && request.resource.data.createdAt == resource.data.createdAt
         && request.resource.data.email is string;

       // Delete: Allow users to delete their own profile
       allow delete: if isOwner(userId);

       // Prevent listing all users (enumeration protection)
       allow list: if false;
     }

    // =========================================================================
    // RECIPE_STORE COLLECTION (Backend Cache)
    // =========================================================================
    // Backend-only cache for processed recipes
    // Only service account can access (bypasses these rules)
    match /recipe_store/{contentHash} {
      allow read, write: if false;  // Deny all client access
    }
  }
}
