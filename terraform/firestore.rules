rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // =========================================================================
    // RECIPES COLLECTION
    // =========================================================================
    // Recipes are readable by ANY authenticated user (shared collection)
    // Only the creator can modify their own recipes
    match /recipes/{recipeId} {
      // Any authenticated user can read all recipes
      allow read: if isAuthenticated();

      // Authenticated users can create recipes (will set userId on creation)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Only the creator can update or delete their recipe
      allow update, delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;
    }

    // =========================================================================
    // USERS COLLECTION (Backend-Only Access)
    // =========================================================================
    // Users collection contains OAuth tokens and sensitive data
    // Only backend service account can access (service accounts bypass rules)
    // Clients must use backend API endpoints for profile operations
    match /users/{userId} {
      allow read, write: if false;  // Deny all client access
    }

    // =========================================================================
    // RECIPE_STORE COLLECTION (Backend Cache)
    // =========================================================================
    // Backend-only cache for processed recipes
    // Only service account can access (bypasses these rules)
    match /recipe_store/{contentHash} {
      allow read, write: if false;  // Deny all client access
    }
  }
}
